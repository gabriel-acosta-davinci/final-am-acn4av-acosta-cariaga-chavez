<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    android:padding="16dp"
    tools:context=".ContactoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Contacto"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:fontFamily="@font/inter"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="En Medicalshift pensamos y actuamos en función denuestros asociados. Si tenés alguna consulta podés escribirnos a través de nuestras líneas de contacto."
        android:textColor="#333333"
        android:textSize="16sp"
        android:layout_marginBottom="32dp"/>

    <!-- Emergencias -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergencias"
        android:textSize="14sp"
        android:textColor="#666666"/>

    <TextView
        android:id="@+id/tvNumeroEmergencias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0800-123-4567"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:focusable="true"/>

    <!-- Atención Telefónica -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atención telefónica"
        android:textSize="14sp"
        android:textColor="#666666"/>

    <TextView
        android:id="@+id/tvNumeroAtencion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0810-888-1234"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:focusable="true"/>

    <!-- Email -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email de contacto"
        android:textSize="14sp"
        android:textColor="#666666"/>

    <TextView
        android:id="@+id/tvEmailContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="infoafiliados@medicalshift.com"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:focusable="true"/>

    <!-- WhatsApp -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WhatsApp"
        android:textSize="14sp"
        android:textColor="#666666"/>

    <TextView
        android:id="@+id/tvWhatsapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+54 9 11 2233-4455"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:clickable="true"
        android:focusable="true"/>

</LinearLayout>