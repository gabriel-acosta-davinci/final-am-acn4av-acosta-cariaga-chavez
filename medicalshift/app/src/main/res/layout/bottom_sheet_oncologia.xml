<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solicitud de Medicamentos Oncológicos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="@font/inter"
            android:layout_marginBottom="24dp"/>

        <include layout="@layout/component_form_user_selector" />

        <include layout="@layout/component_form_file_attachment" />

        <!-- Centro Médico -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Centro médico/sanatorio donde realizás la aplicación" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@android:color/black"
            app:hintTextColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:layout_marginTop="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCentroMedico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:hint="Nombre del Centro Médico"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:boxStrokeColor="@android:color/black"
            app:hintTextColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:layout_marginBottom="16dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLocalidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:hint="Localidad"/>
        </com.google.android.material.textfield.TextInputLayout>

        <include layout="@layout/component_form_datepicker" />

        <include layout="@layout/component_form_comments" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSolicitar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Solicitar"
            android:backgroundTint="@android:color/white"
            android:textColor="#2196F3"
            app:cornerRadius="24dp"
            android:textStyle="bold"
            android:fontFamily="@font/inter"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>