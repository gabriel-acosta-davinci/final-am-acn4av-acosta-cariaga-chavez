<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solicitud de Reintegro"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="@font/inter"
            android:layout_marginBottom="24dp"/>

        <include layout="@layout/component_form_user_selector" />

        <!-- CBU del Usuario -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="El reintegro se depositará en el CBU:"
            android:textColor="@android:color/black"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/etUserCBU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:enabled="false"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/black"/>

        <!-- Tipo de Reintegro -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Reintegro"
            android:textColor="@android:color/black"
            android:textSize="14sp"/>
            
        <Spinner
            android:id="@+id/spinnerTipoReintegro"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp" />

        <!-- Texto informativo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="La vigencia de la factura para solicitar tu reintegro es de 1 año. Adjuntá factura, recibo o ticket (comprobante fiscal) con el detalle de la práctica que realizaste, pedido médico y documentación respaldatoria que creas necesaria."
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <!-- Adjunto 1 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTomarFoto1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tomar Foto Factura"
            android:backgroundTint="@android:color/white"
            android:textColor="#2196F3"
            app:cornerRadius="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="o"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:layout_marginVertical="8dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdjuntarArchivo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adjuntar Factura"
            android:backgroundTint="@android:color/white"
            android:textColor="#2196F3"
            app:cornerRadius="24dp"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:id="@+id/tvArchivoAdjunto1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:textColor="#03A9F4"
            android:visibility="gone"/>

        <!-- Adjunto 2 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTomarFoto2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tomar Foto Pedido Médico"
            android:backgroundTint="@android:color/white"
            android:textColor="#2196F3"
            app:cornerRadius="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="o"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:layout_marginVertical="8dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdjuntarArchivo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adjuntar Pedido Médico"
            android:backgroundTint="@android:color/white"
            android:textColor="#2196F3"
            app:cornerRadius="24dp"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:id="@+id/tvArchivoAdjunto2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:textColor="#03A9F4"
            android:visibility="gone"/>

        <!-- Adjunto 3 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTomarFoto3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tomar Foto Otra Documentación"
            android:backgroundTint="@android:color/white"
            android:textColor="#2196F3"
            app:cornerRadius="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="o"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:layout_marginVertical="8dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdjuntarArchivo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adjuntar Otra Documentación"
            android:backgroundTint="@android:color/white"
            android:textColor="#2196F3"
            app:cornerRadius="24dp"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:id="@+id/tvArchivoAdjunto3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:textColor="#03A9F4"
            android:visibility="gone"/>

        <!-- Comentarios (Personalizado) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Describí el motivo por el cual estás solicitando el reintegro" />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="250"
            app:boxStrokeColor="@android:color/black"
            app:hintTextColor="@android:color/black"
            android:textColorHint="@android:color/black"
            app:counterTextColor="@android:color/black">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etComentarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="250"
                android:minLines="3"
                android:textColor="@android:color/black"
                android:gravity="top"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSolicitar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Solicitar Reintegro"
            android:backgroundTint="@android:color/white"
            android:textColor="#2196F3"
            app:cornerRadius="24dp"
            android:textStyle="bold"
            android:fontFamily="@font/inter"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>