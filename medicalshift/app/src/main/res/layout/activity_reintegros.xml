<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    android:padding="16dp"
    tools:context=".ReintegrosActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Cuenta de Reintegro"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:fontFamily="@font/inter"
        android:layout_marginBottom="24dp"/>

    <!-- Grupo 1: Vista de CBU Actual -->
    <LinearLayout
        android:id="@+id/viewCbuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tu CBU actual para reintegros es:"
            android:textColorHint="@android:color/black"
            app:hintTextColor="@android:color/black"
            app:boxStrokeColor="@android:color/black">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCurrentCbu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textColor="@android:color/black"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCambiarCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Cambiar Cuenta de Reintegro"
            android:backgroundTint="@android:color/white"
            android:textColor="#2196F3"
            app:cornerRadius="24dp"/>

    </LinearLayout>

    <!-- Grupo 2: Formulario de EdiciÃ³n -->
    <LinearLayout
        android:id="@+id/editCbuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese el nuevo CBU"
            android:textColorHint="@android:color/black"
            app:hintTextColor="@android:color/black"
            app:boxStrokeColor="@android:color/black">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNuevoCbu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@android:color/black"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEnviarSolicitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Enviar Solicitud"
            android:backgroundTint="@android:color/white"
            android:textColor="#2196F3"
            app:cornerRadius="24dp"/>

    </LinearLayout>

</LinearLayout>
